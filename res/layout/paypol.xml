<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#019cde"
        android:layout_height="60dp"
        android:paddingTop="15dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/map"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="80dp"
            android:src="@drawable/search"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="140dp"
            android:src="@drawable/reload"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/paypal"
            />

    </RelativeLayout>


    <LinearLayout



        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paypalearnings"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/kagure_text_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pricing" />

    <TextView
        android:id="@+id/kagure_text_view1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:textSize="20sp"
        android:text="Judy's Spainsh Restaurant" />

    <TextView
        android:id="@+id/kagure_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1505 Lexington Ave"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="60dp"
        android:textSize="14dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:id="@+id/kagure_text_viewar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/sales" />

    <TextView
        android:id="@+id/kagure_text_view22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Order"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="60dp"
        android:textSize="14dp"
        android:layout_marginTop="40dp"
        />
</RelativeLayout>



</LinearLayout>
